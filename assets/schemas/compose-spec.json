{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Docker Compose Specification",
  "description": "Schema for Docker Compose v3+ services",
  "type": "object",
  "properties": {
    "version": { "type": ["string", "number"] },
    "services": { "type": "object", "additionalProperties": { "type": "object" } },
    "volumes": { "type": "object" },
    "networks": { "type": "object" },
    "configs": { "type": "object" },
    "secrets": { "type": "object" }
  }
}
